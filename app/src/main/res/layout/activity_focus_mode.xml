<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background3"
    android:id="@+id/focusLayout"
    android:transitionName="shared_element_to_compose">

        <TextView
            android:id="@+id/countdownclock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus Mode\nExpire Time"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif-black"
            android:textSize="30sp"
            android:textColor="@android:color/white"/>

        <TimePicker
            android:id="@+id/fragment_createalarm_timePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />

        <Button
            android:id="@+id/fragment_createalarm_scheduleAlarm"
            android:layout_width="244dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginBottom="216dp"
            android:background="@layout/button_gradient_red"
            android:text="Start Focus Mode"/>

</LinearLayout>